* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    /* Light Mode Colors */
    --bg-primary: #ffffff;
    --bg-secondary: #f7f7f8;
    --bg-tertiary: #ececf1;
    --text-primary: #0d0d0d;
    --text-secondary: #6e6e80;
    --border-color: #d9d9e3;
    --accent: #10a37f;
    --accent-hover: #0d8568;
    --user-msg-bg: #f4f4f4;
    --ai-msg-bg: transparent;
    --shadow: rgba(0, 0, 0, 0.05);
    --sidebar-bg: #f7f7f8;
}

body.dark-mode {
    /* Dark Mode Colors */
    --bg-primary: #212121;
    --bg-secondary: #2f2f2f;
    --bg-tertiary: #3a3a3a;
    --text-primary: #ececec;
    --text-secondary: #b4b4b4;
    --border-color: #4a4a4a;
    --accent: #19c37d;
    --accent-hover: #14a872;
    --user-msg-bg: #2f2f2f;
    --ai-msg-bg: transparent;
    --shadow: rgba(0, 0, 0, 0.3);
    --sidebar-bg: #171717;
}

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    background: var(--bg-primary);
    color: var(--text-primary);
    display: flex;
    height: 100vh;
    overflow: hidden;
    transition: background 0.3s, color 0.3s;
}

/* Sidebar */
.sidebar {
    width: 260px;
    background: var(--sidebar-bg);
    border-right: 1px solid var(--border-color);
    display: flex;
    flex-direction: column;
    transition: all 0.3s;
}

.sidebar-header {
    padding: 1rem;
    border-bottom: 1px solid var(--border-color);
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    font-size: 1.1rem;
}

.logo-icon {
    font-size: 1.5rem;
}

.new-chat-btn {
    padding: 0.5rem;
    background: transparent;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    cursor: pointer;
    color: var(--text-primary);
    transition: all 0.2s;
}

.new-chat-btn:hover {
    background: var(--bg-tertiary);
}

.chat-history {
    flex: 1;
    overflow-y: auto;
    padding: 0.5rem;
}

.chat-item {
    padding: 0.75rem;
    margin: 0.25rem 0;
    border-radius: 8px;
    cursor: pointer;
    font-size: 0.9rem;
    color: var(--text-secondary);
    transition: all 0.2s;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.chat-item:hover {
    background: var(--bg-tertiary);
    color: var(--text-primary);
}

.chat-item.active {
    background: var(--bg-tertiary);
    color: var(--text-primary);
    font-weight: 500;
}

.sidebar-footer {
    padding: 1rem;
    border-top: 1px solid var(--border-color);
}

.theme-toggle-btn {
    width: 100%;
    padding: 0.75rem;
    background: transparent;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    cursor: pointer;
    color: var(--text-primary);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    justify-content: center;
    transition: all 0.2s;
    font-size: 0.95rem;
}

.theme-toggle-btn:hover {
    background: var(--bg-tertiary);
}

/* Main Chat Area */
.chat-main {
    flex: 1;
    display: flex;
    flex-direction: column;
    background: var(--bg-primary);
}

.mobile-header {
    display: none;
    padding: 1rem;
    border-bottom: 1px solid var(--border-color);
    align-items: center;
    gap: 1rem;
}

.menu-btn, .mobile-theme-btn {
    padding: 0.5rem;
    background: transparent;
    border: none;
    cursor: pointer;
    color: var(--text-primary);
}

.mobile-logo {
    flex: 1;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
}

.messages-container {
    flex: 1;
    overflow-y: auto;
    scroll-behavior: smooth;
}

/* Welcome Screen */
.welcome-screen {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100%;
    padding: 2rem;
}

.welcome-content {
    max-width: 800px;
    text-align: center;
}

.welcome-content h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    font-weight: 700;
}

.welcome-content p {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin-bottom: 3rem;
}

.example-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
}

.example-card {
    padding: 1.5rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.2s;
    text-align: left;
    display: flex;
    align-items: center;
    gap: 1rem;
}

.example-card:hover {
    background: var(--bg-tertiary);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px var(--shadow);
}

.example-icon {
    font-size: 1.5rem;
}

.example-text {
    color: var(--text-primary);
    font-size: 0.95rem;
}

/* Messages */
.messages {
    padding: 2rem;
    max-width: 900px;
    margin: 0 auto;
    width: 100%;
}

.message {
    margin-bottom: 2rem;
    animation: fadeIn 0.3s ease;
}

.message-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
}

.message-avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    background: var(--bg-secondary);
}

.message-author {
    font-weight: 600;
    font-size: 0.95rem;
}

.message-content {
    margin-left: 42px;
    line-height: 1.7;
    color: var(--text-primary);
}

.message.user .message-content {
    padding: 1rem;
    background: var(--user-msg-bg);
    border-radius: 12px;
}

.message.ai .debate-info {
    margin-top: 1rem;
    padding: 1rem;
    background: var(--bg-secondary);
    border-radius: 12px;
    border-left: 3px solid var(--accent);
}

.debate-phases {
    margin-top: 0.75rem;
    font-size: 0.85rem;
    color: var(--text-secondary);
}

.view-transcript-btn {
    margin-top: 1rem;
    padding: 0.5rem 1rem;
    background: transparent;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    cursor: pointer;
    color: var(--text-primary);
    font-size: 0.9rem;
    transition: all 0.2s;
}

.view-transcript-btn:hover {
    background: var(--bg-tertiary);
}

/* Typing Indicator */
.typing-indicator {
    display: flex;
    gap: 0.4rem;
    padding: 1rem;
}

.typing-dot {
    width: 8px;
    height: 8px;
    background: var(--text-secondary);
    border-radius: 50%;
    animation: typing 1.4s infinite;
}

.typing-dot:nth-child(2) {
    animation-delay: 0.2s;
}

.typing-dot:nth-child(3) {
    animation-delay: 0.4s;
}

@keyframes typing {
    0%, 60%, 100% {
        opacity: 0.3;
        transform: translateY(0);
    }
    30% {
        opacity: 1;
        transform: translateY(-10px);
    }
}

/* Input Area */
.input-area {
    padding: 1rem 2rem 2rem;
    border-top: 1px solid var(--border-color);
    background: var(--bg-primary);
}

.input-container {
    max-width: 900px;
    margin: 0 auto;
    display: flex;
    gap: 0.75rem;
    align-items: flex-end;
    padding: 0.75rem 1rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    transition: all 0.2s;
}

.input-container:focus-within {
    border-color: var(--accent);
    box-shadow: 0 0 0 3px rgba(16, 163, 127, 0.1);
}

#messageInput {
    flex: 1;
    border: none;
    background: transparent;
    resize: none;
    outline: none;
    font-family: inherit;
    font-size: 1rem;
    color: var(--text-primary);
    max-height: 200px;
    line-height: 1.5;
}

#messageInput::placeholder {
    color: var(--text-secondary);
}

.send-btn {
    padding: 0.5rem;
    background: var(--accent);
    border: none;
    border-radius: 8px;
    cursor: pointer;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
}

.send-btn:hover:not(:disabled) {
    background: var(--accent-hover);
}

.send-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.input-hint {
    text-align: center;
    margin-top: 0.75rem;
    font-size: 0.85rem;
    color: var(--text-secondary);
}

/* Animations */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Responsive */
@media (max-width: 768px) {
    .sidebar {
        position: fixed;
        left: -260px;
        height: 100vh;
        z-index: 1000;
    }
    
    .sidebar.open {
        left: 0;
        box-shadow: 2px 0 10px var(--shadow);
    }
    
    .mobile-header {
        display: flex;
    }
    
    .example-grid {
        grid-template-columns: 1fr;
    }
    
    .messages {
        padding: 1rem;
    }
    
    .input-area {
        padding: 1rem;
    }
    
    .welcome-content h1 {
        font-size: 1.8rem;
    }
}

/* Scrollbar */
::-webkit-scrollbar {
    width: 8px;
}

::-webkit-scrollbar-track {
    background: var(--bg-primary);
}

::-webkit-scrollbar-thumb {
    background: var(--border-color);
    border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
    background: var(--text-secondary);
}

/* Home Button */
.home-btn {
    width: 100%;
    padding: 0.75rem;
    margin-bottom: 0.5rem;
    background: transparent;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    cursor: pointer;
    color: var(--text-primary);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    justify-content: center;
    transition: all 0.2s;
    font-size: 0.95rem;
}

.home-btn:hover {
    background: var(--bg-tertiary);
}

/* Enhanced Debate Loading */
.debate-progress {
    margin: 1rem 0;
    padding: 1.5rem;
    background: var(--bg-secondary);
    border-radius: 12px;
    border-left: 3px solid var(--accent);
}

.progress-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1rem;
}

.progress-title {
    font-weight: 600;
    font-size: 1.1rem;
}

.progress-time {
    font-size: 0.9rem;
    color: var(--text-secondary);
}

.progress-bar-container {
    width: 100%;
    height: 8px;
    background: var(--bg-tertiary);
    border-radius: 10px;
    overflow: hidden;
    margin-bottom: 1.5rem;
}

.progress-bar-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--accent), #14a872);
    border-radius: 10px;
    transition: width 0.5s ease;
}

.debate-phases-live {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.phase-live-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem;
    background: var(--bg-primary);
    border-radius: 8px;
    transition: all 0.3s;
}

.phase-live-item.active {
    background: var(--bg-tertiary);
    border-left: 3px solid var(--accent);
}

.phase-live-item.completed {
    opacity: 0.6;
}

.phase-status {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.9rem;
    flex-shrink: 0;
}

.phase-status.pending {
    background: var(--bg-tertiary);
    color: var(--text-secondary);
}

.phase-status.active {
    background: var(--accent);
    color: white;
    animation: pulse 1.5s ease-in-out infinite;
}

.phase-status.completed {
    background: var(--accent);
    color: white;
}

.phase-info {
    flex: 1;
}

.phase-name {
    font-weight: 600;
    font-size: 0.95rem;
    margin-bottom: 0.25rem;
}

.phase-description {
    font-size: 0.85rem;
    color: var(--text-secondary);
}

.fun-fact {
    margin-top: 1.5rem;
    padding: 1rem;
    background: var(--bg-primary);
    border-radius: 8px;
    border-left: 3px solid var(--accent);
}

.fun-fact-title {
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--accent);
    font-size: 0.9rem;
}

.fun-fact-text {
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.5;
}

@keyframes pulse {
    0%, 100% {
        transform: scale(1);
        opacity: 1;
    }
    50% {
        transform: scale(1.1);
        opacity: 0.8;
    }
}

/* Watch Debate Button */
.watch-debate-btn {
    width: 100%;
    padding: 0.75rem;
    margin: 1rem 0;
    background: var(--bg-primary);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    cursor: pointer;
    color: var(--text-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    transition: all 0.2s;
    font-size: 0.95rem;
    font-weight: 500;
}

.watch-debate-btn:hover {
    background: var(--bg-tertiary);
    border-color: var(--accent);
}

#debate-toggle-icon {
    font-size: 0.85rem;
    transition: transform 0.3s;
}

/* Live Debate Viewer */
.live-debate-viewer {
    margin-top: 1rem;
    background: var(--bg-primary);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    overflow: hidden;
    animation: slideDown 0.3s ease;
}

@keyframes slideDown {
    from {
        max-height: 0;
        opacity: 0;
    }
    to {
        max-height: 500px;
        opacity: 1;
    }
}

.debate-stream {
    max-height: 400px;
    overflow-y: auto;
    padding: 1rem;
}

.debate-entry {
    margin-bottom: 1rem;
    animation: slideIn 0.3s ease;
}

@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateX(-10px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

.debate-model-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
}

.debate-model-text {
    padding: 0.75rem;
    background: var(--bg-tertiary);
    border-radius: 8px;
    font-size: 0.9rem;
    line-height: 1.5;
    border-left: 3px solid currentColor;
}

.debate-entry.modelA .debate-model-text {
    border-left-color: #667eea;
}

.debate-entry.modelB .debate-model-text {
    border-left-color: #f093fb;
}

.debate-system-message {
    text-align: center;
    padding: 0.5rem;
    color: var(--text-secondary);
    font-size: 0.85rem;
    font-weight: 600;
    font-style: italic;
}

.view-transcript-btn {
    margin-top: 0.75rem;
    padding: 0.5rem 1rem;
    background: transparent;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    cursor: pointer;
    color: var(--text-primary);
    font-size: 0.9rem;
    transition: all 0.2s;
}

.view-transcript-btn:hover {
    background: var(--bg-tertiary);
}

/* Chat History Styling */
.chat-item {
    padding: 0.75rem;
    margin: 0.25rem 0;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s;
}

.chat-item:hover {
    background: var(--bg-tertiary);
}

.chat-preview {
    font-size: 0.9rem;
    color: var(--text-primary);
    margin-bottom: 0.25rem;
}

.chat-time {
    font-size: 0.75rem;
    color: var(--text-secondary);
}

/* Timestamp in Messages */
.message-time {
    margin-left: auto;
    font-size: 0.8rem;
    color: var(--text-secondary);
}

/* Message Actions (Copy Button) */
.message-actions {
    margin-top: 0.75rem;
    display: flex;
    gap: 0.5rem;
}

.action-btn {
    padding: 0.5rem 1rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    cursor: pointer;
    color: var(--text-primary);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    transition: all 0.2s;
}

.action-btn:hover {
    background: var(--bg-tertiary);
    transform: translateY(-1px);
}

.btn-icon {
    font-size: 1rem;
}

.btn-text {
    font-weight: 500;
}

/* Model Badges */
.model-badges {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
    flex-wrap: wrap;
}

.model-badge {
    padding: 0.4rem 0.75rem;
    border-radius: 6px;
    font-size: 0.85rem;
    font-weight: 500;
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
}

.model-badge.model-a {
    background: rgba(102, 126, 234, 0.15);
    color: #667eea;
    border: 1px solid rgba(102, 126, 234, 0.3);
}

.model-badge.model-b {
    background: rgba(240, 147, 251, 0.15);
    color: #f093fb;
    border: 1px solid rgba(240, 147, 251, 0.3);
}

.debate-complete-text {
    font-size: 0.85rem;
    color: var(--text-secondary);
}

/* Better Debate Info */
.debate-info {
    margin-top: 1rem;
    padding: 1rem;
    background: var(--bg-secondary);
    border-radius: 12px;
    border-left: 3px solid var(--accent);
}

/* Markdown Content Styling */
.markdown-content {
    line-height: 1.7;
}

.markdown-content h1,
.markdown-content h2,
.markdown-content h3 {
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    font-weight: 600;
}

.markdown-content h1 { font-size: 1.75rem; }
.markdown-content h2 { font-size: 1.5rem; }
.markdown-content h3 { font-size: 1.25rem; }

.markdown-content p {
    margin: 0.75rem 0;
}

.markdown-content ul, .markdown-content ol {
    margin: 0.75rem 0;
    padding-left: 1.5rem;
}

.markdown-content li {
    margin: 0.5rem 0;
}

/* Code Block Styling */
.markdown-content pre {
    background: #1e1e1e;
    border-radius: 8px;
    padding: 1rem;
    margin: 1rem 0;
    overflow-x: auto;
    position: relative;
}

.markdown-content code {
    font-family: 'Consolas', 'Monaco', 'Courier New', monospace;
    font-size: 0.9em;
}

.markdown-content pre code {
    background: none;
    padding: 0;
    border-radius: 0;
    color: #d4d4d4;
}

.markdown-content :not(pre) > code {
    background: var(--bg-secondary);
    padding: 0.2em 0.4em;
    border-radius: 4px;
    color: var(--accent);
    font-size: 0.9em;
}

/* LaTeX Math Styling */
.katex {
    font-size: 1.1em;
}

.katex-display {
    margin: 1.5rem 0;
    overflow-x: auto;
    overflow-y: hidden;
}

.latex-error {
    color: #ff6b6b;
    background: rgba(255, 107, 107, 0.1);
    padding: 0.2em 0.4em;
    border-radius: 4px;
    font-family: monospace;
}

/* Strong/Bold text */
.markdown-content strong {
    font-weight: 600;
    color: var(--text-primary);
}

/* Links */
.markdown-content a {
    color: var(--accent);
    text-decoration: none;
}

.markdown-content a:hover {
    text-decoration: underline;
}

/* Blockquotes */
.markdown-content blockquote {
    border-left: 3px solid var(--accent);
    padding-left: 1rem;
    margin: 1rem 0;
    color: var(--text-secondary);
}

/* Tables */
.markdown-content table {
    border-collapse: collapse;
    width: 100%;
    margin: 1rem 0;
}

.markdown-content th,
.markdown-content td {
    border: 1px solid var(--border-color);
    padding: 0.5rem;
    text-align: left;
}

.markdown-content th {
    background: var(--bg-secondary);
    font-weight: 600;
}

/* Horizontal Rule */
.markdown-content hr {
    border: none;
    border-top: 1px solid var(--border-color);
    margin: 2rem 0;
}
